<!DOCTYPE html>

<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title></title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="">
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid justify-content-end">
            <a class="navbar-brand" href="/logout">Logout</a>
        </div>
    </nav>

     <!-- Users -->
     <div class="container">
        <h2>Users</h2>
    </div>

    <!-- Vertikal Linje -->
    <div class="container pb-2">
        <hr class="mb-4 my-auto">
        </div>

    <div class="container pb-5">
        <table class="table table-hover">
            <thead class="table-light">
              <tr>
                <th scope="col">#</th>
                <th scope="col">Username</th>
                <th scope="col">Last</th>
                <th scope="col">Handle</th>
              </tr>
            </thead>
            <tbody>
                <h1><%= users %></h1>
              <% for(var i=0; i<users.length; i++) {%>
                <tr>
                    <th scrope="row">i</th>
                    <td><%= users[i].username %></td>
                    <td></td>
                    <td></td>
                </tr>
              <% } %>
            </tbody>
          </table>
    </div>

    <!-- Statistics -->
    <div class="container">
        <h2>Statistics</h2>
    </div>

    <!-- Vertikal Linje -->
    <div class="container pb-2">
    <hr class="mb-4 my-auto">
    </div>

    <!-- Kort-grupp -->
    <div class="container pb-5">
        <div class="card-group mx-auto">
            <!-- Kort Wind-->
            <div class="card shadow-sm mx-2 bg-light">
                <div class="div text-center">
                    <h6>Wind</h6>
                </div>
                <div class="card-body text-center">
                    <p id="wind">
                        <%= windspeed %>
                    </p>
                </div>
            </div>

            <!-- Kort Price-->
            <div class="card shadow-sm mx-2 bg-light">
                <div class="div text-center">
                    <h6>Price</h6>
                </div>
                <div class="card-body text-center">
                    <p>
                        <%= price %>
                    </p>
                </div>
            </div>

            <!-- Kort consumtion -->
            <div class="card shadow-sm mx-2 bg-light">
                <div class="div text-center">
                    <h6>Consumtion</h6>
                </div>
                <div class="card-body text-center">
                    <p>
                        <%= consumption %>
                    </p>
                </div>
            </div>

            <!-- Kort production -->
            <div class="card shadow-sm mx-2 bg-light">
                <div class="div text-center">
                    <h6>Production</h6>
                </div>
                <div class="card-body text-center ">
                    <p id="production"><%= production %></p>
                </div>
            </div>

            <!-- Kort net-production -->
            <div class="card shadow-sm mx-2 bg-light">
                <div class="div text-center">
                    <h6>Net-production</h6>
                </div>
                <div class="card-body text-center">
                    <p><%= netProduction %></p>
                </div>
            </div>

            <!-- kort buffer -->
            <div class="card shadow-sm mx-2 bg-light">
                <div class="div text-center">
                    <h6>Buffer</h6>
                </div>
                <div class="card-body text-center">
                    <p>99</p>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Control Panel -->
    <div class="container">
        <h2>Control Panel</h2>
    </div>

    <!-- Vertikal Linje -->
    <div class="container pb-2">
        <hr class="mb-4 my-auto">
        </div>
    <!-- Andra raden --->
    <div class="container pb-5">
        <div class="card-group mx-auto">
            <!-- Kort Ratio-->
            <div class="card shadow-sm mx-2 bg-light">
                <div class="div text-center">
                    <h6>Ratio</h6>
                </div>
                <div class="card-body text-center">
                        <div class="container row">
                        <h6 class="col">Send to Buffer</h6>
                        <!-- <meter id="ratio" value="0.5">50%</meter> -->
                        <input type="range" min="1" max="100" value="<%= windspeed %>" class="slider col" id="myRange">
                        <h6 class="col">Sell on Market</h6>
                        </div>
                        <div class="div text-center">
                            <h6>50%</h6>
                        </div>
                    </p>
                </div>
            </div>

            <div class="card shadow-sm mx-2 bg-light">
                <div class="div text-center">
                    <h6>Buffer</h6>
                </div>
                <div class="card-body text-center">
                    <p id="wind">
                        <label for="buffer">Buffer</label>
                        <meter id="buffer" value="0.1">2%</meter>
                    
                        <!-- <%= windspeed %> -->
                    </p>
                    <div class="div text-center">
                        <h6>3%</h6>
                    </div>
                </div>
            </div>


        </div>
    </div>

    <!-- Upload File -->
    <div class="container">
        <h2>Manager Information</h2>
    </div>

    <!-- Vertikal Linje -->
    <div class="container pb-2">
        <hr class="mb-4 my-auto">
        </div>

    <div class="container">
        <form method="POST" action="/imageupload" enctype="multipart/form-data">
            <input type="file" name="filename">
            <input type="submit">
        </form>
    </div>
    
</body>

</html>